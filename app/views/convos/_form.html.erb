<%= form_for [@user, @convo] do |f| %>
  <% if @convo.errors.any? %>
    <div class="error_messages">
      <h2><%= pluralize(@convo.error.count, "error") %> prohibited this convo from being saved:</h2>
      <ul>
      <% @convo.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
  <%= hidden_field_tag "convo[category_ids][]", nil%>
    <% Category.all.each do |category| %>
    <%= check_box_tag "convo[category_ids][]", category.id, @convo.category_ids.include?(category.id), id: dom_id(category) %>
    <%= label_tag dom_id(category), category.cat_name %><br/>
  <% end %>
</div>

  <div class="field">
    <%= f.label :description, "Convo Description" %>
    <br />
    <%= f.text_area(:description, size: "34x3") %>
  </div>

  <div class="field">
  <%= hidden_field_tag "convo[gender_ids][]", nil%>
    <% Gender.all.each do |gender| %>
    <%= check_box_tag "convo[gender_ids][]", gender.id, @convo.category_ids.include?(gender.id), id: dom_id(gender) %>
    <%= label_tag dom_id(gender), gender.gender_name %><br/>
  <% end %>
    </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>