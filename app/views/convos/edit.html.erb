<form action="/convos/<%=params[:id] %>" method="post">
 <input name="_method" type="hidden" value="put">
  <select name="convo[topic]">
    <option value="Philosophy" <% if @convo.topic =="Philosophy" %>SELECTED<% end %>>Philosophy</option>
    <option value="Literature" <% if @convo.topic =="Literature"%>SELECTED<% end %>>Literature</option>
    <option value="Art" <% if @convo.topic =="Art" %>SELECTED<% end %>>Art</option>
    <option value="History" <% if @convo.topic =="History" %>SELECTED<% end %>>History</option>
    <option value="Religion" <% if @convo.topic =="Religion" %>SELECTED<% end %>>Religion</option>
    <option value="Culture" <% if @convo.topic =="Culture" %>SELECTED<% end %>>Culture</option>
  </select><br>
  <textarea name="convo[description]" placeholder="<%= @convo.description %>" rows="5" cols="40"></textarea><br>
  <input type="text" placeholder="<%= @convo.age %>" name="convo[age]">
  <!-- This will be the preferred method for age -->
  <!-- <input type="text" placeholder="min age" name="convo[age_min]"> -->
  <!-- <input type="text" placeholder="max age" name="convo[age_max]"> -->
  <p>Preferred Gender<br>
    <input type="checkbox" name="convo[gender][]" value="f" checked>Female</input>
    <input type="checkbox" name="convo[gender][]" value="m" checked>Male</input>
    <input type="checkbox" name="convo[gender][]" value="tf" checked>TransFemale</input><br>
    <input type="checkbox" name="convo[gender][]" value="tm" checked>TransMale</input>
    <input type="checkbox" name="convo[gender][]" value="tg" checked>TransGender</input>
    <input type="checkbox" name="convo[gender][]" value="o" checked>Other</input>
  </p>
  <input type="text" placeholder="<%= @convo.start_time %>" name="convo[start_time]">
  <input type="text" placeholder="<%= @convo.end_time %>" name="convo[end_time]"><br>
  <textarea name="convo[loc_desc]" placeholder="<%= @convo.loc_desc %>" rows="5" cols="40"></textarea>
  <input type="submit">
</form>