  <div class="jumbotron">
    <h3>Enter your personal information</h3>
    <form role="form" action="/users" method="post">
      <div class="form-group">
        <label for "Name">Name</label>
        <input type="text" class="form-control" id="Name" name="user[name]" placeholder="Name">
        <label for="Email1">Email address</label>
        <input type="email" class="form-control" id="Email1" name="user[email]" placeholder="Enter email">
      </div>
      <div class="form-group">
        <label for="Password1">Password</label>
        <input type="password" class="form-control" id="Password1" placeholder="Password" name="user[password]">
        <label for="Password2">Confirm Password</label>
        <input type="password" class="form-control" id="Password2" placeholder="Confirm" name="user[password_confirmation]">
      </div>
    <div class="form-group">
      <label for="Age">Age</label>
        <input type="text" class="form-control" id="Age" placeholder="Age" name="user[age]">
        <label for="Gender">Gender</label>
        <input type="text" class="form-control" id="Gender" placeholder="Gender" name="user[gender]">
      </div>
    <div class="form-group">
      <label for="Interests">Interests</label>
      <textarea id="Interests" class="form-control" rows="3" name="user[interests]"></textarea>
      <label for="Writers">Favorite Writers & Artists</label>
      <textarea id="Writers" class="form-control" rows="3" name="user[writers]"></textarea>
      <label for="Works">Favorite Works of Art/Literature/Philosohpy</label>
      <textarea id="Works" class="form-control" rows="3" name="user[works]"></textarea>
      <label for="Quotes">Favorite Quotes</label>
      <textarea id="Quotes" class="form-control" rows="3" name="user[quotes]"></textarea>
    </div>
      <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
