= form_for @user do |f|
  - if @user.errors.any?
    .error_messages
      %h2 #{ pluralize(@user.error.count, "error") } prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li #{ msg }

  .field
    = f.label :name
    %br
    = f.text_field :name

  .field
    = f.label :email
    %br
    = f.text_field :email

  .field
    = f.label :password
    %br
    = f.password_field :password

  .field
    = f.label :password_confirmation, "Confirm Password"
    %br
    = f.password_field :password_confirmation

  .field
    = f.label :age
    %br
    = f.number_field(:age, in: 18..100)

  .field
    = f.fields_for :gender_assignment do |assign_builder|
      = assign_builder.label :gender_id, "Gender"
      = assign_builder.select(:gender_id, [['Male', 1], ['Female', 2]])

  .field
    = f.label :interests
    %br
    = f.text_area(:interests, size: "34x3")

  .field
    = f.label :writers, "Fav Writers/Artists"
    %br
    =f.text_area(:writers, size: "34x3")

  .field
    = f.label :works, "Fav Works"
    %br
    =f.text_area(:works, size: "34x3")

  .field
    = f.label :quotes, "Fav Quotes"
    %br
    =f.text_area(:quotes, size: "34x3")

  .actions
    = f.submit